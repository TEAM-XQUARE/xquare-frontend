{
    "name": "xquare-frontend",
    "packageManager": "yarn@3.2.3",
    "scripts": {
        "new-service": "hygen services new",
        "postinstall": "husky install",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable"
    },
    "devDependencies": {
        "husky": ">=6",
        "hygen": "^6.1.0",
        "lint-staged": ">=10",
        "pinst": ">=2",
        "prettier": "^2.8.8",
        "typescript": "^4.3.5"
    },
    "resolutions": {
        "typescript": "4.3.5"
    },
    "workspaces": [
        "services/*",
        "libraries/*",
        "shared/*"
    ],
    "lint-staged": {
      "{services,shared}/**/*.{js,ts,jsx,tsx}": [
        "prettier --write"
      ]
    }
}
